#include<iostream>
using namespace std;
int main()
{  
    int n,num1,num2,num3,num4;
    cin >> n;
    
    num1 = n / 1000;
    num2 = n / 100 % 10;
    num3 = n / 10 % 10;
    num4 = n % 10;
    
    if(num1 % 2 == 1 && num1 > num2  && num1 > num3 && num1 > num4)
    {
        cout<<":)"<<endl;
        
    } else
    
    {
        cout<<":("<<endl;
    }
	return 0;
}
